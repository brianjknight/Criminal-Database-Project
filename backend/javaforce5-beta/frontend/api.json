  },
  "components": {
    "schemas": {
      "CriminalRecord": {
        "type": "object",
        "properties": {
          "ssn": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "dob": {
            "type": "string"
          },
          "crimeCount": {
            "type": "integer"
          },
          "crimes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Crime"
            }
          }
        }
      },
      "Crime": {
        "type": "object",
        "properties": {
          "caseNumber": {
            "type": "string"
          },
          "ssn": {
            "type": "string"
          },
          "charge": {
            "type": "string"
          },
          "offenseLevel": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "date": {
            "type": "string"
          },
          "sentenceInDays": {
            "type": "integer"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "ssn": {
            "type": "string"
          }
        }
      },
      "Confirmation": {
        "type": "string"
      }
    }
  }
}