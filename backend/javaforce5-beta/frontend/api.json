{
  "openapi": "3.0.3",
  "info": {
    "title": "Criminal Record Database",
    "version": "0.0.1"
  },
  "paths": {
    "/criminalrecords/{ssn}": {
      "get": {
        "description": "Get a criminal record for a given SSN if it exists.",
        "parameters": [
          {
            "name": "ssn",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "pattern": "^\\d{3}-\\d{2}-\\d{4}",
              "example": "ddd-dd-dddd"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/CriminalRecord"
                  },
                  "example": {
                    "ssn": "ddd-dd-dddd",
                    "name": "First Last",
                    "dob": "dd/dd/dddd",
                    "state": "XX",
                    "crimeCount": 1,
                    "crimes": []
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input(s)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Error"
                  },
                  "example": {
                    "code": 400,
                    "message": "Invalid input(s)"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Error"
                  },
                  "example": {
                    "code": 500,
                    "message": "Server error"
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "description": "Deletes a criminal record for a given SSN if it exists.",
        "parameters": [
          {
            "name": "ssn",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "pattern": "^\\d{3}-\\d{2}-\\d{4}",
              "example": "ddd-dd-dddd"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Confirmation"
                  },
                  "example": "Criminal record was expunged from the database."
                }
              }
            }
          },
          "400": {
            "description": "Invalid input(s)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Error"
                  },
                  "example": {
                    "code": 400,
                    "message": "Invalid input(s)"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Error"
                  },
                  "example": {
                    "code": 500,
                    "message": "Server error"
                  }
                }
              }
            }
          }
        }
      }
    },
